# StockLab API Credentials Configuration
# =====================================
# Copy this file to credentials.yml and add your actual API keys
# Keep credentials.yml secure and never commit it to version control

# Azure SQL Database Configuration
# --------------------------------
azure_sql:
  server: "your-server.database.windows.net"
  database: "your-database-name"
  username: "your-username"
  password: "your-password"
  driver: "ODBC Driver 18 for SQL Server"

# Polygon.io API (Market Data)
# ----------------------------
polygon:
  api_key: "your-polygon-api-key-here"
  base_url: "https://api.polygon.io"

# Alpaca Trading API (Paper Trading)
# ----------------------------------
alpaca:
  api_key: "your-alpaca-api-key-here"
  secret_key: "your-alpaca-secret-key-here"
  base_url: "https://paper-api.alpaca.markets"  # Use paper trading URL
  data_url: "https://data.alpaca.markets"

# Weights & Biases (Experiment Tracking)
# --------------------------------------
wandb:
  api_key: "your-wandb-api-key-here"
  project_name: "stocklab"
  entity: "your-wandb-username"

# Optional: Additional APIs
# -------------------------
# These are optional and only needed for specific features

# Alpha Vantage API (Alternative Market Data)
alpha_vantage:
  api_key: "your-alpha-vantage-api-key-here"

# News API (Market News)
news_api:
  api_key: "your-news-api-key-here"

# Environment Variables (Alternative to this file)
# ------------------------------------------------
# You can also set these as environment variables:
# AZURE_SQL_SERVER=your-server
# AZURE_SQL_DATABASE=your-database
# AZURE_SQL_USERNAME=your-username
# AZURE_SQL_PASSWORD=your-password
# POLYGON_API_KEY=your-polygon-key
# ALPACA_API_KEY=your-alpaca-key
# ALPACA_SECRET_KEY=your-alpaca-secret
# WANDB_API_KEY=your-wandb-key

# Notes:
# - For demo/hackathon purposes, you can use free tiers of these services
# - Polygon.io offers free tier with limited API calls
# - Alpaca offers free paper trading
# - Weights & Biases has a free tier for experiment tracking
# - Azure SQL has a free tier available 